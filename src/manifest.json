{
    "name": "围脖是个好图床",
    "version": "0.0.3",
    "manifest_version": 2,
    "description": "围脖是个好图床",
    "background": {
        "scripts": ["scripts/background.js"]
    },
    "browser_action": {
        "default_title": "围脖是个好图床",
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        }
    },
    "icons": {
        "16": "images/icon16.png"
    },
    "permissions": ["webRequest", "webRequestBlocking", "tabs", "<all_urls>", "contextMenus"],
    "homepage_url": "http://weibotuchuang.sinaapp.com/",
    "externally_connectable": {
        "matches": ["*://*.v2ex.com/*"]
    }
}